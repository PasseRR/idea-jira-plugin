<idea-plugin version="2">
    <id>com.gome.plugin.jira</id>
    <name>Jira Connection Plugin</name>
    <version>1.0</version>
    <vendor email="xie__hai@sina.com" url="https://github.com/PasseRR">PasseRR</vendor>

    <description>
        <![CDATA[
          用于Jira工作任务更新<br>
        ]]>
    </description>

    <change-notes>
        <![CDATA[
          beta version
        ]]>
    </change-notes>

    <idea-version since-build="141.0"/>

    <extensions defaultExtensionNs="com.intellij">
        <!-- settings配置 -->
        <applicationConfigurable instance="com.gome.idea.plugins.jira.settings.GJiraConfigurable"/>
        <applicationService serviceInterface="com.gome.idea.plugins.jira.GJiraSettings"
                        serviceImplementation="com.gome.idea.plugins.jira.GJiraSettings"/>
        <!-- tool window配置 -->
        <toolWindow id="jira" anchor="bottom" icon="/icon/jira.png" factoryClass="com.gome.idea.plugins.jira.toolwindow.GJiraToolWindow"/>
    </extensions>

    <actions>
    </actions>
    <application-components>
        <component>
            <implementation-class>com.gome.idea.plugins.jira.schedule.TimerApplication</implementation-class>
        </component>
    </application-components>
</idea-plugin>